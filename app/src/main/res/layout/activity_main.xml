<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </FrameLayout>

    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        lib:fab_addButtonColorNormal="@color/secondary"
        lib:fab_addButtonColorPressed="@color/primary"
        lib:fab_addButtonPlusIconColor="@android:color/white"
        lib:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/normal_create_notebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            lib:fab_size="mini"
            lib:fab_colorNormal="@color/secondary"
            lib:fab_colorPressed="@color/primary"
            lib:fab_title="Notebook"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/normal_create_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            lib:fab_icon="@drawable/ic_create_white_36dp"
            lib:fab_size="mini"
            lib:fab_colorNormal="@color/secondary"
            lib:fab_colorPressed="@color/primary"
            lib:fab_title="Note"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/normal_edit_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        lib:fab_icon="@drawable/ic_create_white_36dp"
        lib:fab_colorNormal="@color/secondary"
        lib:fab_colorPressed="@color/primary"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>
