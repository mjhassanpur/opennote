<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.mjhassanpur.opennote.CreateNoteFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notebook_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notebook_grey_64"
            android:paddingRight="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/tag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tag_grey_72"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/alarm_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_grey_64"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/camera_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_grey_72"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/microphone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_microphone_grey_72"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="9dp"
            android:paddingBottom="10dp"/>

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_teal_64"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>

    <View style="@style/divider"
        android:id="@+id/divider_top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/add_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        android:inputType="textCapWords"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:gravity="start"
        android:textColor="@color/text_color"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/add_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/add_note"
        android:inputType="textCapSentences|textMultiLine"
        android:gravity="start"
        android:textColor="@color/text_color"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</LinearLayout>
